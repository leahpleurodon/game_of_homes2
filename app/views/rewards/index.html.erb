
<h1>Listing Rewards</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Provider</th>
      <th>Name</th>
      <th>QR code</th>
      <th>Redemption code</th>
      <th>Date Created</th>
      <th>Expiry</th>
      <th>Enabled</th>
      <th>Points Value</th>
      <th>Can be featured in promotions?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rewards.each do |reward| %>
      <tr>
        <td><%= reward.provider.name if reward.provider.name.present? %></td>
        <td><%= reward.name %></td>
        <td><%= reward.qr_code %></td>
        <td><%= reward.redemption_code %></td>
        <td><%= reward.datecreated %></td>
        <td><%= reward.expiry %></td>
        <td><%= reward.enabled %></td>
        <td><%= reward.points %></td>
        <td><%= reward.advertisement %></td>
        <td><%= link_to 'Show', reward %></td>
        <td><%= link_to 'Edit', edit_reward_path(reward) %></td>
        <td><%= link_to 'Destroy', reward, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Reward', new_reward_path %>
