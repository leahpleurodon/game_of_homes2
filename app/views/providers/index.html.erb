
<h1>Listing Providers</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Logo</th>
      <th>Mcontactname</th>
      <th>Mcontactno</th>
      <th>Mcontactemail</th>
      <th>Enabled</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @providers.each do |provider| %>
      <tr>
        <td><%= provider.name %></td>
        <td><%= provider.logo %></td>
        <td><%= provider.mcontactname %></td>
        <td><%= provider.mcontactno %></td>
        <td><%= provider.mcontactemail %></td>
        <td><%= provider.enabled %></td>
        <td><%= provider.category.name %></td>
        <td><%= link_to 'Show', provider %></td>
        <td><%= link_to 'Edit', edit_provider_path(provider) %></td>
        <td><%= link_to 'Destroy', provider, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

